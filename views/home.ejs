<body>
	<% if (!user) { %>
	<p>Welcome! Please <a href="/login">log in</a>.</p>
	<% } else { %>
	<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
		<a class="navbar-brand"><img src="<%= user._json.profile %>" width="50" height="50">
			<%= user.displayName %></a>
		<a href="/logout">Log out</a>
	</nav>
	View your
	<button type="button" class="btn btn-outline-info" onclick="relocate_activity()">365 Day Run</button>
	<% } %>
</body>

